{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "client/vite.config.*",
    "client/vitest.config.*",
    "client/cypress.config.*",
    "client/nightwatch.conf.*",
    "client/playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "noUncheckedIndexedAccess": true
  }
}

{
  "name": "minileveleditor",
  "version": "0.0.0",
  "private": true,
  "bin": "bin.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:server-dev\" \"npm:client-dev\"",
    "prepare": "npm run server-build && npm run client-build",
    "prod": "concurrently -P \"npm:server-run {@}\" \"npm:client-preview\"",
    "client-dev-directly": "vite client",
    "client-dev": "wait-on -l tcp:3000 && npm run client-dev-directly",
    "client-dev-serverless": "cross-env VITE_APP_MODE=serverless npm run client-dev-directly",
    "client-build": "run-p type-check \"client-build-only {@}\" --",
    "client-preview": "vite preview client",
    "client-run": "wait-on -l tcp:3000 && vite preview client",
    "client-build-only": "vite build client",
    "type-check": "vue-tsc --build --force",
    "server-dev": "nodemon --watch server --watch common --ext ts --exec \"npm run server-build && npm run server-run\"",
    "server-build": "tsc -p server",
    "server-run": "node server/dist/server/index.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write client/src/ server/"
  },
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@popperjs/core": "^2.11.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vueuse/core": "^10.9.0",
    "bootstrap": "^5.3.3",
    "concurrently": "^8.2.2",
    "express": "^4.19.2",
    "idb-keyval": "^6.2.1",
    "phaser": "^3.80.1",
    "pinia": "^2.1.7",
    "prettier": "^3.2.5",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
    "vite": "^5.2.11",
    "vue": "^3.4.27",
    "vuedraggable": "^4.1.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/bootstrap": "^5.2.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/shelljs": "^0.8.15",
    "@types/uuid": "^9.0.8",
    "@types/wicg-file-system-access": "^2023.10.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.26.0",
    "nodemon": "^3.1.0",
    "npm-run-all2": "^6.2.0",
    "typescript": "~5.4.5",
    "vue-tsc": "^2.0.19"
  }
}

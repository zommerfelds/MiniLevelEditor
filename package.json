{
  "name": "minileveledit",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:server-dev\" \"npm:client-dev\"",
    "client-dev-directly": "vite client",
    "client-dev": "wait-on -l tcp:3000 && npm run client-dev-directly",
    "client-build": "run-p client-type-check \"client-build-only {@}\" --",
    "client-preview": "vite preview client",
    "client-build-only": "vite build client",
    "client-type-check": "vue-tsc --build --force  client",
    "server-dev": "nodemon --watch server server/index.ts levels.json",
    "server-build": "tsc -p server",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write client/src/ server/"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3",
    "express": "^4.18.2",
    "phaser": "^3.70.0",
    "pinia": "^2.1.7",
    "prettier": "^3.2.4",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "nodemon": "^3.0.3",
    "npm-run-all2": "^6.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25",
    "wait-on": "^7.2.0"
  }
}

{
  "name": "minileveleditor",
  "version": "0.0.0",
  "private": true,
  "bin": "bin.ts",
  "scripts": {
    "dev": "concurrently \"npm:server-dev\" \"npm:client-dev\"",
    "prepare": "npm run server-build && npm run client-build",
    "prod": "concurrently -P \"npm:server-run {@}\" \"npm:client-preview\"",
    "client-dev-directly": "vite client",
    "client-dev": "wait-on -l tcp:3000 && npm run client-dev-directly",
    "client-dev-serverless": "cross-env VITE_APP_MODE=serverless npm run client-dev-directly",
    "client-build": "run-p type-check \"client-build-only {@}\" --",
    "client-preview": "vite preview client",
    "client-run": "wait-on -l tcp:3000 && vite preview client",
    "client-build-only": "vite build client",
    "type-check": "vue-tsc --build --force",
    "server-dev": "nodemon --watch server server/index.ts levels.json",
    "server-build": "tsc -p server",
    "server-run": "node server/dist/server/index.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write client/src/ server/"
  },
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.6",
    "@popperjs/core": "^2.11.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vueuse/core": "^10.9.0",
    "bootstrap": "^5.3.2",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "phaser": "^3.70.0",
    "pinia": "^2.1.7",
    "prettier": "^3.2.4",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
    "vite": "^5.2.6",
    "vue": "^3.3.11",
    "vuedraggable": "^4.1.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/bootstrap": "^5.2.10",
    "@types/express": "^4.17.21",
    "@types/node": "^18.19.3",
    "@types/shelljs": "^0.8.15",
    "@types/uuid": "^9.0.8",
    "@types/wicg-file-system-access": "^2023.10.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "nodemon": "^3.0.3",
    "npm-run-all2": "^6.1.1",
    "typescript": "~5.3.0",
    "vue-tsc": "^1.8.25"
  }
}
